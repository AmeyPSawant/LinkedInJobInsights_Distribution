{
  "manifest_version": 3,
  "name": "LinkedIn Job Stats Overlay",
  "version": "1.0",
  "description": "Displays job posting statistics directly on LinkedIn job listings",
  "permissions": [
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}